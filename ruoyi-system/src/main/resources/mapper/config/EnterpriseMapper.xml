<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.config.mapper.EnterpriseMapper">
    
    <resultMap type="Enterprise" id="EnterpriseResult">
        <result property="enterpriseId"    column="enterprise_id"    />
        <result property="enterpriseName"    column="enterprise_name"    />
        <result property="enterpriseAddress"    column="enterprise_address"    />
        <result property="enterpriseDesc"    column="enterprise_desc"    />
        <result property="enterpriseImgs"    column="enterprise_imgs"    />
        <result property="enterpriseMapLocation"    column="enterprise_map_location"    />
        <result property="enterpriseScope"    column="enterprise_scope"    />
        <result property="enterpriseTypeId"    column="enterprise_type_id"    />
        <result property="enterpriseTypeName"    column="enterprise_type_name"    />
        <result property="enableStatus"    column="enable_status"    />
        <result property="icon"    column="icon"    />
        <result property="orderSort"    column="order_sort"    />
        <result property="remark"    column="remark"    />
        <result property="weight"    column="weight"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="bookId"    column="book_id"    />
        <result property="bookName"    column="book_name"    />
        <result property="userId"    column="user_id"    />
        <result property="userName"    column="user_name"    />
    </resultMap>

    <sql id="selectEnterpriseVo">
        select enterprise_id, enterprise_name, enterprise_address, enterprise_desc, enterprise_imgs, enterprise_map_location, enterprise_scope, enterprise_type_id, enterprise_type_name, enable_status, icon, order_sort, remark, weight, create_by, create_time, update_by, update_time, book_id, book_name, user_id, user_name from config_enterprise
    </sql>

    <select id="selectEnterpriseAll" parameterType="Enterprise" resultMap="EnterpriseResult">
		<include refid="selectEnterpriseVo"/>
        <where>
            <if test="enterpriseScope != null  and enterpriseScope != ''"> and enterprise_scope like concat('%', #{enterpriseScope}, '%')</if>
            <if test="enableStatus != null "> and enable_status = #{enableStatus}</if>
            <if test="userId != null "> and user_id = #{userId}</if>
        </where>
        order by order_sort asc
	</select>

    <select id="selectEnterpriseList" parameterType="Enterprise" resultMap="EnterpriseResult">
        <include refid="selectEnterpriseVo"/>
        <where>  
            <if test="enterpriseName != null  and enterpriseName != ''"> and enterprise_name like concat('%', #{enterpriseName}, '%')</if>
            <if test="enableStatus != null "> and enable_status = #{enableStatus}</if>
            <if test="createTime != null "> and create_time = #{createTime}</if>
            <if test="userId != null "> and user_id = #{userId}</if>
        </where>
        order by order_sort
    </select>
    
    <select id="selectEnterpriseByEnterpriseId" parameterType="Long" resultMap="EnterpriseResult">
        <include refid="selectEnterpriseVo"/>
        where enterprise_id = #{enterpriseId}
    </select>
        
    <insert id="insertEnterprise" parameterType="Enterprise">
        insert into config_enterprise
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="enterpriseId != null">enterprise_id,</if>
            <if test="enterpriseName != null">enterprise_name,</if>
            <if test="enterpriseAddress != null">enterprise_address,</if>
            <if test="enterpriseDesc != null">enterprise_desc,</if>
            <if test="enterpriseImgs != null">enterprise_imgs,</if>
            <if test="enterpriseMapLocation != null">enterprise_map_location,</if>
            <if test="enterpriseScope != null">enterprise_scope,</if>
            <if test="enterpriseTypeId != null">enterprise_type_id,</if>
            <if test="enterpriseTypeName != null">enterprise_type_name,</if>
            <if test="enableStatus != null">enable_status,</if>
            <if test="icon != null">icon,</if>
            <if test="orderSort != null">order_sort,</if>
            <if test="remark != null">remark,</if>
            <if test="weight != null">weight,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="bookId != null">book_id,</if>
            <if test="bookName != null">book_name,</if>
            <if test="userId != null">user_id,</if>
            <if test="userName != null">user_name,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="enterpriseId != null">#{enterpriseId},</if>
            <if test="enterpriseName != null">#{enterpriseName},</if>
            <if test="enterpriseAddress != null">#{enterpriseAddress},</if>
            <if test="enterpriseDesc != null">#{enterpriseDesc},</if>
            <if test="enterpriseImgs != null">#{enterpriseImgs},</if>
            <if test="enterpriseMapLocation != null">#{enterpriseMapLocation},</if>
            <if test="enterpriseScope != null">#{enterpriseScope},</if>
            <if test="enterpriseTypeId != null">#{enterpriseTypeId},</if>
            <if test="enterpriseTypeName != null">#{enterpriseTypeName},</if>
            <if test="enableStatus != null">#{enableStatus},</if>
            <if test="icon != null">#{icon},</if>
            <if test="orderSort != null">#{orderSort},</if>
            <if test="remark != null">#{remark},</if>
            <if test="weight != null">#{weight},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="bookId != null">#{bookId},</if>
            <if test="bookName != null">#{bookName},</if>
            <if test="userId != null">#{userId},</if>
            <if test="userName != null">#{userName},</if>
         </trim>
    </insert>

    <update id="updateEnterprise" parameterType="Enterprise">
        update config_enterprise
        <trim prefix="SET" suffixOverrides=",">
            <if test="enterpriseName != null">enterprise_name = #{enterpriseName},</if>
            <if test="enterpriseAddress != null">enterprise_address = #{enterpriseAddress},</if>
            <if test="enterpriseDesc != null">enterprise_desc = #{enterpriseDesc},</if>
            <if test="enterpriseImgs != null">enterprise_imgs = #{enterpriseImgs},</if>
            <if test="enterpriseMapLocation != null">enterprise_map_location = #{enterpriseMapLocation},</if>
            <if test="enterpriseScope != null">enterprise_scope = #{enterpriseScope},</if>
            <if test="enterpriseTypeId != null">enterprise_type_id = #{enterpriseTypeId},</if>
            <if test="enterpriseTypeName != null">enterprise_type_name = #{enterpriseTypeName},</if>
            <if test="enableStatus != null">enable_status = #{enableStatus},</if>
            <if test="icon != null">icon = #{icon},</if>
            <if test="orderSort != null">order_sort = #{orderSort},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="weight != null">weight = #{weight},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="bookId != null">book_id = #{bookId},</if>
            <if test="bookName != null">book_name = #{bookName},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="userName != null">user_name = #{userName},</if>
        </trim>
        where enterprise_id = #{enterpriseId}
    </update>

    <delete id="deleteEnterpriseByEnterpriseId" parameterType="Long">
        delete from config_enterprise where enterprise_id = #{enterpriseId}
    </delete>

    <delete id="deleteEnterpriseByEnterpriseIds" parameterType="String">
        delete from config_enterprise where enterprise_id in 
        <foreach item="enterpriseId" collection="array" open="(" separator="," close=")">
            #{enterpriseId}
        </foreach>
    </delete>
</mapper>